@model List<AssignFeatureToCarDto>
@{
    ViewData["Title"] = "CreateFeatureByCarId";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araca Ait Özellik Ekleme Sayfası</h4>
                        <p class="card-subtitle mb-4">
                            Araca ait özellik tanımlaması yapılacak sayfadır.
                            </p>
                        <form method="post">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="form-check">
                                    <input type="hidden" asp-for="@Model[i].FeatureID" />
                                    <input type="hidden" asp-for="@Model[i].Name" />
                                    <input type="checkbox" asp-for="@Model[i].Available" class="form-check-input" />
                                    <label class="form-check-label">@Model[i].Name</label>
                                </div>
                            }
                            <input type="hidden" name="carId" value="@ViewBag.CarId" />
                            <br />
                            <button type="submit" class="btn btn-primary">Özellikleri Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

