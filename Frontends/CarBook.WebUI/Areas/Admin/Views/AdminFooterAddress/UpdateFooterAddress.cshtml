@model UpdateFooterAddressDto
@{
    ViewData["Title"] = "UpdateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Adres Bilgisi Güncelle</h4>
						<p class="card-subtitle mb-4">Adres alanına ait güncelleme işlemini aşağıdaki panelden yapabilirsiniz.</p>
						<form method="post">
							<input type="hidden" asp-for="FooterAddressID" />
							<div class="form-group">
								<label for="exampleInputAddress">Adres</label>
								<input type="text" class="form-control" id="exampleInputAddress" asp-for="Address" placeholder="Adres Bilgisini Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputPhone">Telefon</label>
								<input type="tel" class="form-control" id="exampleInputPhone" asp-for="Phone" placeholder="Telefon Bilgisi Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputEmail">Email</label>
								<input type="text" class="form-control" id="exampleInputEmail" asp-for="Email" placeholder="Mail Adresini Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputDescription">Açıklama</label>
								<input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklamayı Giriniz">
							</div>
							<button type="submit" class="btn btn-success waves-effect waves-light">Adresi Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>




