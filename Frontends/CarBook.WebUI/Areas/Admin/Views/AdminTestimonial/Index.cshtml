@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Referanslar Listesi Sayfası</h4>
                        <p class="card-subtitle mb-4">
                            Referanslara ait bilgileri yönetebileceğiniz sayfadır.
                        </p>
                        @if (Model == null || Model.Count == 0)
                        {
                            <div class="alert alert-warning" role="alert">Kayıtlı veri bulunamadı.</div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table mb-0 w-100 datatable-common">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Profil</th>
                                            <th>Ad Soyad</th>
                                            <th>Başlık</th>
                                            <th>Yorum</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td><img src="@item.ImageUrl" width="50" height="50" style="margin-right:10px;border-radius:50%" /></td>
                                                <td>@item.Name</td>
                                                <td>@item.Title</td>
                                                <td>@item.Comment</td>
                                                <td><a href="/Admin/AdminTestimonial/RemoveTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/Admin/AdminTestimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-success">Güncelle</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        <a href="/Admin/AdminTestimonial/CreateTestimonial/" class="btn btn-outline-primary">Yeni Referans Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@await Html.PartialAsync("_DataTableScriptPartial")